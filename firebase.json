{
  "functions": {
    "predeploy": [
      "scripts/predeploy_functions.sh"
    ],
    "source": "functions"
  },
  "hosting": {
    "predeploy": [
      "scripts/predeploy_hosting.sh"
    ],
    "target": "gacha-simulator",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/helloWorld",
        "function": "helloWorld"
      },
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
